{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++.exe build all files",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "C:\\dev\\lib\\eigen",
                "-I",
                "C:\\dev\\lib\\NLopt\\include",
                "-L",
                "C:\\dev\\lib\\NLopt\\lib",
                "-g",
                "-std=c++20",
                "*.cpp",
                "-o",
                "${workspaceFolder}\\main.exe",
                "-lm"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build all .cpp files in the workspace."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "C:\\dev\\lib\\eigen",
                "-I",
                "C:\\dev\\lib\\NLopt\\include",
                "-L",
                "C:\\dev\\lib\\NLopt\\lib",
                "-g",
                "-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}